<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey">


    <ImageView
        android:id="@+id/imgv_gameover"
        android:layout_width="256dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/gameover" />

    <Button
        android:id="@+id/bt_gameover_tryagain"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_gameover"
        android:layout_centerHorizontal="true"
        android:text="Try again"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt_gameover_exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_gameover_tryagain"
        android:layout_below="@+id/bt_gameover_tryagain"
        android:text="exit"
        android:onClick="btnExit"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp" />
</RelativeLayout>
